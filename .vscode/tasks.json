{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "buildServices",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "${workspaceFolder}/src/dirs.proj"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "pfs:publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "--no-restore",
                "/m",
                "/v:m",
                "/p:BuildFrontendBackend=false",
                "/p:BuildOtherServices=false",
                "/p:BuildPortal=false",
                "/p:BuildPortForwarding=true",
                "/p:BuildTokenService=false",
                "${workspaceFolder}/src/dirs.proj",
            ],
            "problemMatcher": "$msCompile",
            "group": "build"
        },
        {
            "type": "docker-build",
            "label": "pfs:docker-build:debug",
            "dependsOn": [
                "pfs:publish"
            ],
            "dockerBuild": {
                "tag": "port-forwarding-web-api:debug",
                "dockerfile": "${workspaceFolder}/bin/Debug/PortForwardingWebApi/Dockerfile.debug",
                "context": "${workspaceFolder}/bin/Debug/PortForwardingWebApi",
                "pull": true
            },
            "netCore": {
                "appProject": "${workspaceFolder}/src/VSOnline/PortForwardingAgent/PortForwardingAgent.csproj"
            },
            "group": "build"
        },
        {
            "label": "buildVsoUtil",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "${workspaceFolder}/src/Common/Src/VsoUtil/VsoUtil.csproj"
            ],
            "problemMatcher": "$msCompile",
            "group": "build"
        },
        {
            "type": "shell",
            "label": "Prepare Dev CLI",
            "command": "${workspaceFolder}/src/Common/Src/VsoUtil/PrepareDevCLICommandRunner.sh",
            "dependsOn": "buildVsoUtil",
            "options": {
                "cwd": "${workspaceFolder}/bin/debug/VsoUtil",
                "shell": { "executable": "/bin/bash"}
            },
            "problemMatcher": []
        }
    ]
}