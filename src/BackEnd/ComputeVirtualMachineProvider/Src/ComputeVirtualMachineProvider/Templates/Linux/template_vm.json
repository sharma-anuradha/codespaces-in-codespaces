{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "adminPassword": {
      "type": "string"
    },
    "adminUsername": {
      "type": "string"
    },
    "location": {
      "type": "string"
    },
    "networkInterfaceName": {
      "type": "string"
    },
    "virtualMachineName": {
      "type": "string"
    },
    "virtualMachineRG": {
      "type": "string"
    },
    "virtualMachineSize": {
      "type": "string"
    },
    "vmSetupScript": {
      "type": "securestring"
    }
  },
  "variables": {
    "diskName": "[concat(parameters('virtualMachineName'),'-disk')]",
    "nsgName": "[concat(parameters('virtualMachineName'),'-nsg')]",
    "vnetName": "[concat(parameters('virtualMachineName'),'-vnet')]",
    "ipName": "[concat(parameters('virtualMachineName'),'-ip')]",
    "nsgId": "[resourceId(resourceGroup().name, 'Microsoft.Network/networkSecurityGroups', variables('nsgName'))]",
    "vnetId": "[resourceId(resourceGroup().name,'Microsoft.Network/virtualNetworks',variables('vnetName'))]",
    "subnetRef": "[concat(variables('vnetId'), '/subnets/','default')]"
  },
  "resources": [
    {
      "name": "[parameters('networkInterfaceName')]",
      "type": "Microsoft.Network/networkInterfaces",
      "apiVersion": "2018-10-01",
      "location": "[parameters('location')]",
      "tags": { "ResourceTag": "[parameters('virtualMachineName')]" },
      "dependsOn": [
        "[concat('Microsoft.Network/networkSecurityGroups/', variables('nsgName'))]",
        "[concat('Microsoft.Network/virtualNetworks/',variables('vnetName'))]"
      ],
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "subnet": {
                "id": "[variables('subnetRef')]"
              },
              "privateIPAllocationMethod": "Dynamic"
            }
          }
        ],
        "networkSecurityGroup": {
          "id": "[variables('nsgId')]"
        }
      }
    },
    {
      "name": "[variables('nsgName')]",
      "type": "Microsoft.Network/networkSecurityGroups",
      "apiVersion": "2019-02-01",
      "location": "[parameters('location')]",
      "tags": { "ResourceTag": "[parameters('virtualMachineName')]" },
      "properties": {
        "securityRules": []
      }
    },
    {
      "name": "[variables('vnetName')]",
      "type": "Microsoft.Network/virtualNetworks",
      "apiVersion": "2019-02-01",
      "location": "[parameters('location')]",
      "tags": { "ResourceTag": "[parameters('virtualMachineName')]" },
      "properties": {
        "addressSpace": {
          "addressPrefixes": [ "172.16.5.0/24" ]
        },
        "subnets": [
          {
            "name": "default",
            "properties": {
              "addressPrefix": "172.16.5.0/24"
            }
          }
        ]
      }
    },
    {
      "apiVersion": "2018-10-01",
      "dependsOn": [
        "[concat('Microsoft.Network/networkInterfaces/', parameters('networkInterfaceName'))]"
      ],
      "location": "[parameters('location')]",
      "name": "[parameters('virtualMachineName')]",
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('virtualMachineSize')]"
        },
        "storageProfile": {
          "osDisk": {
            "name": "[variables('diskName')]",
            "createOption": "FromImage",
            "managedDisk": {
              "storageAccountType": "Premium_LRS"
            }
          },
          "imageReference": {
            "publisher": "Canonical",
            "offer": "UbuntuServer",
            "sku": "18.04-LTS",
            "version": "latest"
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', parameters('networkInterfaceName'))]"
            }
          ]
        },
        "osProfile": {
          "computerName": "[parameters('virtualMachineName')]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]"
          //"customData": "[parameters('customData')]"
        }
      },
      "resources": [
        {
          "apiVersion": "2015-06-15",
          "dependsOn": [
            "[concat('Microsoft.Compute/virtualMachines/', parameters('virtualMachineName'))]"
          ],
          "location": "[parameters('location')]",
          "name": "update-vm",
          "properties": {
            "autoUpgradeMinorVersion": true,
            "protectedSettings": {
              "script": "[parameters('vmSetupScript')]"
            },
            "publisher": "Microsoft.Azure.Extensions",
            "settings": {
              "skipDos2Unix": false,
              "timestamp": 123456789
            },
            "type": "CustomScript",
            "typeHandlerVersion": "2.0"
          },
          "tags": {
            "displayName": "update-vm"
          },
          "type": "Extensions"
        }
      ],
      "tags": { "ResourceTag": "[parameters('virtualMachineName')]" },
      "type": "Microsoft.Compute/virtualMachines"
    }
  ],
  "outputs": {
    "adminUsername": {
      "type": "string",
      "value": "[parameters('adminUsername')]"
    }
  }
}