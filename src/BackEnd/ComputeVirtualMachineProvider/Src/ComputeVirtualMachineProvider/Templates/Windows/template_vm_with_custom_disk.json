{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string"
    },
    "virtualMachineRG": {
      "type": "string"
    },
    "virtualMachineName": {
      "type": "string"
    },
    "virtualMachineSize": {
      "type": "string"
    },
    "networkSecurityGroupName": {
      "type": "string"
    },
    "networkInterfaceName": {
      "type": "string"
    },
    "virtualNetworkName": {
      "type": "string"
    },
    "adminUsername": {
      "type": "string"
    },
    "adminPassword": {
      "type": "string"
    },
    "resourceTags": {
      "type": "object"
    },
    "vmInitScriptFileUri": {
      "type": "string"
    },
    "vmInitScriptStorageAccountName": {
      "type": "string"
    },
    "vmInitScriptStorageAccountKey": {
      "type": "securestring"
    },
    "vmAgentBlobUrl": {
      "type": "string"
    },
    "vmInitScriptBase64ParametersBlob": {
      "type": "string"
    },
    "storageProfileDetails": {
      "type": "object"
    },
    "runCustomScriptExtension": {
      "type": "string",
      "allowedValues": [
        "Yes",
        "No"
      ]
    }
  },
  "variables": {
    "ipName": "[concat(parameters('virtualMachineName'),'-ip')]",
    "nsgId": "[resourceId(resourceGroup().name, 'Microsoft.Network/networkSecurityGroups', parameters('networkSecurityGroupName'))]",
    "vnetId": "[resourceId(resourceGroup().name,'Microsoft.Network/virtualNetworks', parameters('virtualNetworkName'))]",
    "subnetRef": "[concat(variables('vnetId'), '/subnets/', 'default')]"
  },
  "resources": [
    {
      "name": "[parameters('networkInterfaceName')]",
      "type": "Microsoft.Network/networkInterfaces",
      "apiVersion": "2018-10-01",
      "location": "[parameters('location')]",
      "tags": "[parameters('resourceTags')]",
      "dependsOn": [
        "[concat('Microsoft.Network/networkSecurityGroups/', parameters('networkSecurityGroupName'))]",
        "[concat('Microsoft.Network/virtualNetworks/', parameters('virtualNetworkName'))]"
      ],
      "properties": {
        "ipConfigurations": [
          {
            "name": "[variables('ipName')]",
            "properties": {
              "subnet": {
                "id": "[variables('subnetRef')]"
              },
              "privateIPAllocationMethod": "Dynamic"
            }
          }
        ],
        "networkSecurityGroup": {
          "id": "[variables('nsgId')]"
        }
      }
    },
    {
      "name": "[parameters('networkSecurityGroupName')]",
      "type": "Microsoft.Network/networkSecurityGroups",
      "apiVersion": "2019-02-01",
      "location": "[parameters('location')]",
      "tags": "[parameters('resourceTags')]",
      "properties": {
        "securityRules": [
          {
            "name": "Restrict-Outbound-Udp-Rule",
            "properties": {
              "protocol": "Udp",
              "sourcePortRange": "*",
              "destinationPortRange": "*",
              "sourceAddressPrefix": "*",
              "destinationAddressPrefix": "*",
              "access": "Deny",
              "priority": 200,
              "direction": "Outbound",
              "sourcePortRanges": [],
              "destinationPortRanges": [],
              "sourceAddressPrefixes": [],
              "destinationAddressPrefixes": []
            }
          },
          {
            "name": "Allow-Outbound-Udp-Skype-Rule",
            "properties": {
                "protocol": "Udp",
                "sourcePortRange": "*",
                "sourceAddressPrefix": "*",
                "access": "Allow",
                "priority": 199,
                "direction": "Outbound",
                "sourcePortRanges": [],
                "destinationPortRanges": [
                    "3478",
                    "3479",
                    "3480",
                    "3481"
                ],
                "sourceAddressPrefixes": [],
                "destinationAddressPrefixes": [
                    "13.107.64.0/18",
                    "52.112.0.0/14",
                    "52.120.0.0/14"
                ]
            }
          }
        ]
      }
    },
    {
      "name": "[parameters('virtualNetworkName')]",
      "type": "Microsoft.Network/virtualNetworks",
      "apiVersion": "2019-02-01",
      "location": "[parameters('location')]",
      "tags": "[parameters('resourceTags')]",
      "properties": {
        "addressSpace": {
          "addressPrefixes": [ "172.16.5.0/24" ]
        },
        "subnets": [
          {
            "name": "default",
            "properties": {
              "addressPrefix": "172.16.5.0/24"
            }
          }
        ]
      }
    },
    {
      "apiVersion": "2019-03-01",
      "dependsOn": [
        "[concat('Microsoft.Network/networkInterfaces/', parameters('networkInterfaceName'))]"
      ],
      "location": "[parameters('location')]",
      "name": "[parameters('virtualMachineName')]",
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('virtualMachineSize')]"
        },
        "storageProfile": "[parameters('storageProfileDetails')]",
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', parameters('networkInterfaceName'))]"
            }
          ]
        }
      },
      "resources": [
        {
          "condition": "[equals(parameters('runCustomScriptExtension'), 'Yes')]",
          "apiVersion": "2018-10-01",
          "dependsOn": [
            "[concat('Microsoft.Compute/virtualMachines/', parameters('virtualMachineName'))]"
          ],
          "location": "[resourceGroup().location]",
          "name": "update-vm",
          "properties": {
            "autoUpgradeMinorVersion": true,
            "protectedSettings": {
              "commandToExecute": "[concat('powershell -ExecutionPolicy Unrestricted -File ', 'WindowsInitShim.ps1 ', ' -vmAgentBlobUrl \"', parameters('vmAgentBlobUrl'), '\" -base64ParametersBlob \"', parameters('vmInitScriptBase64ParametersBlob'), '\"')]",
              "storageAccountName": "[parameters('vmInitScriptStorageAccountName')]",
              "storageAccountKey": "[parameters('vmInitScriptStorageAccountKey')]"
            },
            "publisher": "Microsoft.Compute",
            "settings": {
              "fileUris": [
                "[parameters('vmInitScriptFileUri')]"
              ],
              "timestamp": 123456789
            },
            "type": "CustomScriptExtension",
            "typeHandlerVersion": "1.9"
          },
          "tags": {
            "displayName": "update-vm"
          },
          "type": "extensions"
        }
      ],
      "tags": "[parameters('resourceTags')]",
      "type": "Microsoft.Compute/virtualMachines"
    }
  ]
}