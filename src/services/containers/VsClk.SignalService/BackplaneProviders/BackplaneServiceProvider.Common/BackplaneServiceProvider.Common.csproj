<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>$(NetStandardTargetFramework)</TargetFramework>
    <AssemblyName>Microsoft.VsCloudKernel.SignalService.BackplaneServiceProvider.Common</AssemblyName>
    <ClientDir>..\..\..\..\..\client</ClientDir>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="$(ClientDir)\Shared\TraceSourceExtensions.cs" Link="Client\TraceSourceExtensions.cs" />
    <Compile Include="$(ClientDir)\VsClk.SignalService\Client\ExponentialBackoff.cs" Link="Client\ExponentialBackoff.cs" />
    <Compile Include="$(ClientDir)\VsClk.SignalService\Client\HubConnectionHelpers.cs" Link="Client\HubConnectionHelpers.cs" />
    <Compile Include="..\..\Shared\LoggerAdapterListener.cs" Link="Shared\LoggerAdapterListener.cs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="MessagePack" Version="$(MessagePackVersion)" />
    <PackageReference Include="Microsoft.AspNetCore.SignalR.Client" Version="$(AspNetCoreDllVersions)" />
    <PackageReference Include="Microsoft.AspNetCore.SignalR.Protocols.NewtonsoftJson" Version="3.1.0" />
    <PackageReference Include="StreamJsonRpc" Version="$(StreamJsonRpcVersion)" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Common\Common.SignalR.csproj" />
  </ItemGroup>

</Project>
