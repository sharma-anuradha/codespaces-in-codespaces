{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "webAppName": {
      "type": "string",
      "defaultValue": "vsls-presence-servicer",
      "metadata": {
        "description": "Base name of the resource such as web app name and app service plan "
      },
      "minLength": 2
    },
    "sku": {
      "type": "string",
      "defaultValue": "S1",
      "metadata": {
        "description": "The SKU of App Service Plan "
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources."
      }
    },
    "dockerImageName": {
      "type": "string"
    },
    "dockerRegistryUrl": {
      "type": "string"
    },
    "dockerRegistryUsername": {
      "type": "string"
    },
    "dockerRegistryPassword": {
      "type": "string"
    },
    "databaseSetting.endpointUrl": {
      "type": "string"
    },
    "databaseSetting.authorizationKey": {
      "type": "string"
    },
    "authenticateMetadataServiceUri": {
      "type": "string",
      "defaultValue": "https://prod.liveshare.vsengsaas.visualstudio.com/api/authenticatemetadata"
    },
    "buildVersion": {
      "type": "string",
      "defaultValue": "unknown"
    },
    "gitCommit": {
      "type": "string",
      "defaultValue": "unknown"
    },
    "azureSignalRConnection": {
      "type": "string",
      "defaultValue": ""
    }
  },
  "variables": {
    "webAppPortalName": "[concat(parameters('webAppName'))]",
    "webAConfigName": "[concat(parameters('webAppName'), '/web')]",
    "appServicePlanName": "[concat('AppServicePlan-', parameters('webAppName'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2017-08-01",
      "kind": "linux",
      "name": "[variables('appServicePlanName')]",
      "location": "[parameters('location')]",
      "dependsOn": [],
      "sku": {
        "name": "[parameters('sku')]"
      },
      "properties":{
        "reserved":true
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2016-08-01",
      "kind": "app,linux,container",
      "name": "[variables('webAppPortalName')]",
      "location": "[parameters('location')]",
      "properties": {
        "siteConfig": {
          "linuxFxVersion": "[concat('DOCKER|', parameters('dockerImageName'))]",
          "alwaysOn": true,
          "appSettings": [
            {
              "name": "WEBSITES_ENABLE_APP_SERVICE_STORAGE",
              "value": "false"
            },
            {
              "name": "DOCKER_REGISTRY_SERVER_URL",
              "value": "[parameters('dockerRegistryUrl')]"
            },
            {
              "name": "DOCKER_REGISTRY_SERVER_USERNAME",
              "value": "[parameters('dockerRegistryUsername')]"
            },
            {
              "name": "DOCKER_REGISTRY_SERVER_PASSWORD",
              "value": "[parameters('dockerRegistryPassword')]"
            },
            {
              "name": "AppSettings__AzureCosmosDbEndpointUrl",
              "value": "[parameters('databaseSetting.endpointUrl')]"
            },
            {
              "name": "AppSettings__AzureCosmosDbAuthKey",
              "value": "[parameters('databaseSetting.authorizationKey')]"
            },
            {
              "name": "AppSettings__AuthenticateMetadataServiceUri",
              "value": "[parameters('authenticateMetadataServiceUri')]"
            },
            {
              "name": "AppSettings__BuildVersion",
              "value": "[parameters('buildVersion')]"
            },
            {
              "name": "AppSettings__GitCommit",
              "value": "[parameters('gitCommit')]"
            }
          ],
          "connectionStrings": [
            {
              "name": "Azure__SignalR__ConnectionString",
              "ConnectionString": "[parameters('azureSignalRConnection')]"
            }
          ]
        },
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanName'))]"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanName'))]"
      ]
    }
  ]
}
