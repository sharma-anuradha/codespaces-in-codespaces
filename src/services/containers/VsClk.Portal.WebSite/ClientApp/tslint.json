{
    "extends": [
        "tslint-microsoft-contrib/recommended"
    ],
    "rules": {
        "prefer-type-cast": false,
        "no-relative-imports": false,
        "no-console": {
            "severity": "warning",
            "options": [
                "log",
                "error",
                "debug",
                "info",
                "time",
                "timeEnd",
                "trace"
            ]
        },
        "function-name": false,
        // Developer says if it's necessary
        "no-unnecessary-local-variable": false
    }
}