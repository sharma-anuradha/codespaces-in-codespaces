{
    "extends": [
        "tslint-microsoft-contrib/recommended"
    ],
    "rules": {
        "prefer-type-cast": false,
        "no-relative-imports": false,
        "no-console": {
            "severity": "warning",
            "options": [
                "log",
                "error",
                "debug",
                "info",
                "time",
                "timeEnd",
                "trace"
            ]
        },
        "function-name": false,
        "no-unnecessary-local-variable": false,
        "no-backbone-get-set-outside-model": false,
        "no-unused-variable": true,
        "mocha-no-side-effect-code": false,
        "no-suspicious-comment": false,
        "export-name": false,
        "import-name": false,
        "object-literal-shorthand": true,
        "use-simple-attributes": false,
        "react-this-binding-issue": false,
        "react-no-dangerous-html": [
            true,
            [
                {
                    "file": "./src/components/login/login.tsx",
                    "method": "<unknown>",
                    "comment": "String comes from trusted source: Microsoft Cookie Consent"
                }
            ]
        ]
    }
}