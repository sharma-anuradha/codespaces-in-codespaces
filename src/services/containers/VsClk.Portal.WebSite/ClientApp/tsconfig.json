{
  "compilerOptions": {
    "target": "es2017",
    "outDir": "./build",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "webworker"
    ],
    "allowJs": false,
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "experimentalDecorators": true,
    "downlevelIteration": true,
  },
  "include": [
    "src", "test/uitest"
  ],
  "references": [
    {
      "path": "./vso-client-core",
    },
    {
      "path": "./vso-ts-agent",
    },
    {
      "path": "./vso-workbench",
    }
  ]
}