            "path": "packages/vso-client-core"
        },
        {
            "path": "packages/vso-platform-auth"
        },
        {
            "path": "packages/vso-platform-authentication"
        },
        {
            "path": "packages/vso-service-worker"
        },
        {
            "path": "packages/vso-service-worker-client"
