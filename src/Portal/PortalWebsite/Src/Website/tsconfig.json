{
    "extends": "./config/tsconfig.base.json",
    "compilerOptions": {
        "baseUrl": "packages/",
        "paths": {
            "vso-client-core": [
                "vso-client-core/src/index.ts"
            ],
            "vso-platform-auth": [
                "vso-platform-auth/src/index.ts"
            ],
            "vso-platform-authentication": [
                "vso-platform-authentication/src/index.ts"
            ],
            "vso-service-worker": [
                "vso-service-worker/src/index.ts"
            ],
            "vso-service-worker-client": [
                "vso-service-worker-client/src/index.ts"
            ],
            "vso-ts-agent": [
                "vso-ts-agent/src/index.ts"
