{
    "$schema": "https://schema.management.azure.com/schemas/0.1.2-preview/CreateUIDefinition.MultiVm.json#",
    "handler": "Microsoft.Azure.CreateUIDef",
    "version": "0.1.2-preview",
    "parameters": {
        "basics": [
            {
                "name": "codespacePlanName",
                "type": "Microsoft.Common.TextBox",
                "label": "{{basic_codespacePlanName_label}}",
                "defaultValue": "codespace-plan",
                "constraints": {
                    "required": true
                }
            }
        ],
        "steps": [
            {
                "name": "networking",
                "label": "{{networking}}",
                "elements": [
                    {
                        "name": "addVirtualNetwork",
                        "type": "Microsoft.Common.OptionsGroup",
                        "label": "{{networking_addVirtualNetwork_label}}",
                        "defaultValue": "{{networking_addVirtualNetwork_no}}",
                        "toolTip": "",
                        "visible": true,
                        "constraints": {
                            "allowedValues": [
                                {
                                    "label": "{{networking_addVirtualNetwork_yes}}",
                                    "value": "true"
                                },
                                {
                                    "label": "{{networking_addVirtualNetwork_no}}",
                                    "value": "false"
                                }
                            ],
                            "required": true
                        }
                    },
                    {
                        "name": "codespaceVirtualNetwork",
                        "type": "Microsoft.Network.VirtualNetworkCombo",
                        "visible": "[bool(steps('networking').addVirtualNetwork)]",
                        "label": {
                            "virtualNetwork": "{{networking_virtualNetworkLabel}}",
                            "subnets": "{{networking_subnetsLabel}}"
                        },
                        "toolTip": {
                            "virtualNetwork": "",
                            "subnets": ""
                        },
                        "defaultValue": {
                            "name": "vnet01",
                            "addressPrefixSize": "/24"
                        },
                        "constraints": {
                            "minAddressPrefixSize": "/29"
                        },
                        "options": {
                            "hideExisting": false
                        },
                        "subnets": {
                            "subnet1": {
                                "label": "{{networking_subnetLabel}}",
                                "defaultValue": {
                                    "name": "subnet-1",
                                    "addressPrefixSize": "/29"
                                },
                                "constraints": {
                                    "minAddressPrefixSize": "/29",
                                    "minAddressCount": 0,
                                    "requireContiguousAddresses": true
                                }
                            }
                        }
                    }
                ]
            }
        ],
        "outputs": {
            "name": "[basics('codespacePlanName')]",
            "location": "[location()]",
            "virtualNetwork": "[steps('networking').codespaceVirtualNetwork]"
        }
    }
}
