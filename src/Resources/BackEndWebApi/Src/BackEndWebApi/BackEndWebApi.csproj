<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>$(NetCoreAppTargetFramework)</TargetFramework>
    <IsPublishable>true</IsPublishable>
  </PropertyGroup>

  <PropertyGroup>
    <GenerateAppSettingsCommitId>true</GenerateAppSettingsCommitId>
  </PropertyGroup>
  
  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Mvc.NewtonsoftJson" Version="$(AspNetCoreDllVersions)" />
    <PackageReference Include="Microsoft.VsSaaS.AspNetCore.Hosting" Version="$(VsSaaSPackageVersion)" />
    <PackageReference Include="Microsoft.VsSaaS.Azure.KeyVault" Version="$(VsSaaSPackageVersion)" />
    <PackageReference Include="Microsoft.VsSaaS.Azure.Management" Version="$(VsSaaSPackageVersion)" />
    <PackageReference Include="Microsoft.VsSaaS.Azure.Metrics" Version="$(VsSaaSPackageVersion)" />
    <PackageReference Include="Microsoft.VsSaaS.Azure.Storage.Blob" Version="$(VsSaaSPackageVersion)" />
    <PackageReference Include="Microsoft.VsSaaS.Azure.Storage.DocumentDB" Version="$(VsSaaSPackageVersion)" />
    <PackageReference Include="Swashbuckle.AspNetCore" Version="$(SwashbuckleAspNetCorePackageVersion)" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Dockerfile">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\..\..\Common\Src\Common.AspNetCore\Common.AspNetCore.csproj" />
    <ProjectReference Include="..\..\..\..\Common\Src\Auth\Auth.csproj" />
    <ProjectReference Include="..\..\..\..\Common\Src\Common.InnerLoop\Common.InnerLoop.csproj" />
    <ProjectReference Include="..\..\..\..\Common\Src\Common\Common.csproj" />
    <ProjectReference Include="..\..\..\..\Common\Src\HttpContracts\HttpContracts.csproj" />
    <ProjectReference Include="..\..\..\Capacity\Src\Capacity\Capacity.csproj" />
    <ProjectReference Include="..\..\..\Common\Src\Common\BackEnd.Common.csproj" />
    <ProjectReference Include="..\..\..\ComputeVirtualMachineProvider\Src\ComputeVirtualMachineProvider\ComputeVirtualMachineProvider.csproj" />
    <ProjectReference Include="..\..\..\DiskProvider\Src\DiskProvider\DiskProvider.csproj" />
    <ProjectReference Include="..\..\..\KeyVaultProvider\Src\KeyVaultProvider\KeyVaultProvider.csproj" />
    <ProjectReference Include="..\..\..\NetworkInterfaceProvider\Src\NetworkInterfaceProvider\NetworkInterfaceProvider.csproj" />
    <ProjectReference Include="..\..\..\ResourceBroker\Src\ResourceBroker.Contracts\ResourceBroker.Contracts.csproj" />
    <ProjectReference Include="..\..\..\ResourceBroker\Src\ResourceBroker\ResourceBroker.csproj" />
    <ProjectReference Include="..\..\..\ScalingEngine\Src\ScalingEngine\ScalingEngine.csproj" />
    <ProjectReference Include="..\..\..\ArchiveStorageProvider\Src\ArchiveStorageProvider\ArchiveStorageProvider.csproj" />
    <ProjectReference Include="..\..\..\Capacity\Src\Capacity.Contracts\Capacity.Contracts.csproj" />
    <ProjectReference Include="..\..\..\StorageFileShareProvider\Src\StorageFileShareProvider\StorageFileShareProvider.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="..\..\..\..\Settings\**">
      <Link>%(RecursiveDir)%(Filename)%(Extension)</Link>
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      <CopyToPublishDirectory>Always</CopyToPublishDirectory>
    </Content>
  </ItemGroup>

</Project>
