{
  "$schema": "http://json-schema.org/draft-04/schema",
  "$id": "http://schema.github.com/vscs_billing_schema.json",
  "type": "object",
  "definitions": {
    "time": {
      "$id": "#/properties/time",
      "type": "string",
      "format": "date-time"
    },
    "id": {
      "$id": "#/properties/id",
      "type": "string"
    },
    "periodStart": {
      "$id": "#/properties/periodStart",
      "description": "Start of the billable period",
      "type": "string",
      "format": "date-time"
    },
    "periodEnd": {
      "$id": "#/properties/periodEnd",
      "description": "End of the billable period",
      "type": "string",
      "format": "date-time"
    },
    "eventId": {
      "$id": "#/properties/eventId",
      "description": "The eventId is unique to the plan.subscription and the periodStart/periodEnd. Concatenating the eventId + id from the environment should be unique.",
      "type": "string"
    }

  },
  "properties": {
    "additionalPropertiesAllowed": {
      "type": "object",
      "required": [
        "time",
        "id",
        "plan",
        "periodStart",
        "periodEnd",
        "usageDetail"
      ],
      "properties": {
        "time": {
          "$ref": "#/definitions/time"
        },
        "id": {
          "$ref": "#/definitions/id"
        },
        "periodStart": {
          "$ref": "#/definitions/periodStart"
        },
        "periodEnd": {
          "$ref": "#/definitions/periodEnd"
        },
        "eventId": {
          "$ref": "#/definitions/eventId"
        },
        "plan": {
          "$id": "#/properties/plan",
          "type": "object",
          "required": [ "subscription", "resourceGroup", "location", "name" ],
          "properties": {
            "subscription": {
              "$id": "#/properties/plan/properties/subscription",
              "type": "string"
            },
            "resourceGroup": {
              "$id": "#/properties/plan/properties/resourceGroup",
              "type": "string"
            },
            "location": {
              "$id": "#/properties/plan/properties/location",
              "type": "string"
            },
            "name": {
              "$id": "#/properties/plan/properties/name",
              "type": "string"
            }
          }
        },
        "usageDetail": {
          "$id": "#/properties/usageDetail",
          "type": "object",
          "required": [ "environments" ],
          "properties": {
            "environments": {
              "$id": "#/properties/usageDetail/properties/environments",
              "description": "Array of objects, one per Codespace environment",
              "type": "array",
              "items": {
                "$id": "#/properties/usageDetail/properties/environments/items",
                "type": "object",
                "required": [ "id", "resourceUsage" ],
                "properties": {
                  "id": {
                    "$id": "#/properties/usageDetail/properties/environments/items/properties/id",
                    "type": "string"
                  },
                  "name": {
                    "$id": "#/properties/usageDetail/properties/environments/items/properties/name",
                    "type": "string"
                  },
                  "endState": {
                    "$id": "#/properties/usageDetail/properties/environments/items/properties/endState",
                    "type": "string"
                  },
                  "resourceUsage": {
                    "$id": "#/properties/usageDetail/properties/environments/items/properties/resourceUsage",
                    "type": "object",
                    "required": [ "storage" ],
                    "properties": {
                      "compute": {
                        "$id": "#/properties/usageDetail/properties/environments/items/properties/resourceUsage/properties/compute",
                        "type": "array",
                        "items": {
                          "$id": "#/properties/usageDetail/properties/environments/items/properties/resourceUsage/properties/compute/items",
                          "type": "object",
                          "required": [ "sku", "usage" ],
                          "properties": {
                            "sku": {
                              "$id": "#/properties/usageDetail/properties/environments/items/properties/resourceUsage/properties/compute/items/properties/sku",
                              "type": "string"
                            },
                            "usage": {
                              "$id": "#/properties/usageDetail/properties/environments/items/properties/resourceUsage/properties/compute/items/properties/usage",
                              "description": "Seconds of usage",
                              "type": "number"
                            }
                          }
                        }
                      },
                      "storage": {
                        "$id": "#/properties/usageDetail/properties/environments/items/properties/resourceUsage/properties/storage",
                        "type": "array",
                        "items": {
                          "$id": "#/properties/usageDetail/properties/environments/items/properties/resourceUsage/properties/storage/items",
                          "type": "object",
                          "required": [ "sku", "size", "usage" ],
                          "properties": {
                            "sku": {
                              "$id": "#/properties/usageDetail/properties/environments/items/properties/resourceUsage/properties/storage/items/properties/sku",
                              "type": "string"
                            },
                            "size": {
                              "$id": "#/properties/usageDetail/properties/environments/items/properties/resourceUsage/properties/storage/items/properties/size",
                              "type": "integer"
                            },
                            "usage": {
                              "$id": "#/properties/usageDetail/properties/environments/items/properties/resourceUsage/properties/storage/items/properties/usage",
                              "description": "Seconds of usage",
                              "type": "number"
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "additionalPropertiesDenied": {
      "type": "object",
      "required": [
        "time",
        "id",
        "plan",
        "periodStart",
        "periodEnd",
        "usageDetail"
      ],
      "properties": {
        "time": {
          "$ref": "#/definitions/time"
        },
        "id": {
          "$ref": "#/definitions/id"
        },
        "periodStart": {
          "$ref": "#/definitions/periodStart"
        },
        "periodEnd": {
          "$ref": "#/definitions/periodEnd"
        },
        "eventId": {
          "$ref": "#/definitions/eventId"
        },
        "plan": {
          "$id": "#/properties/plan",
          "type": "object",
          "required": [ "subscription", "resourceGroup", "location", "name" ],
          "properties": {
            "subscription": {
              "$id": "#/properties/plan/properties/subscription",
              "type": "string"
            },
            "resourceGroup": {
              "$id": "#/properties/plan/properties/resourceGroup",
              "type": "string"
            },
            "location": {
              "$id": "#/properties/plan/properties/location",
              "type": "string"
            },
            "name": {
              "$id": "#/properties/plan/properties/name",
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "usageDetail": {
          "$id": "#/properties/usageDetail",
          "type": "object",
          "required": [ "environments" ],
          "properties": {
            "environments": {
              "$id": "#/properties/usageDetail/properties/environments",
              "description": "Array of objects, one per Codespace environment",
              "type": "array",
              "items": {
                "$id": "#/properties/usageDetail/properties/environments/items",
                "type": "object",
                "required": [ "id", "resourceUsage" ],
                "properties": {
                  "id": {
                    "$id": "#/properties/usageDetail/properties/environments/items/properties/id",
                    "type": "string"
                  },
                  "name": {
                    "$id": "#/properties/usageDetail/properties/environments/items/properties/name",
                    "type": "string"
                  },
                  "endState": {
                    "$id": "#/properties/usageDetail/properties/environments/items/properties/endState",
                    "type": "string"
                  },
                  "resourceUsage": {
                    "$id": "#/properties/usageDetail/properties/environments/items/properties/resourceUsage",
                    "type": "object",
                    "required": [ "storage" ],
                    "properties": {
                      "compute": {
                        "$id": "#/properties/usageDetail/properties/environments/items/properties/resourceUsage/properties/compute",
                        "type": "array",
                        "items": {
                          "$id": "#/properties/usageDetail/properties/environments/items/properties/resourceUsage/properties/compute/items",
                          "type": "object",
                          "required": [ "sku", "usage" ],
                          "properties": {
                            "sku": {
                              "$id": "#/properties/usageDetail/properties/environments/items/properties/resourceUsage/properties/compute/items/properties/sku",
                              "type": "string"
                            },
                            "usage": {
                              "$id": "#/properties/usageDetail/properties/environments/items/properties/resourceUsage/properties/compute/items/properties/usage",
                              "description": "Seconds of usage",
                              "type": "number"
                            }
                          },
                          "additionalProperties": false
                        }
                      },
                      "storage": {
                        "$id": "#/properties/usageDetail/properties/environments/items/properties/resourceUsage/properties/storage",
                        "type": "array",
                        "items": {
                          "$id": "#/properties/usageDetail/properties/environments/items/properties/resourceUsage/properties/storage/items",
                          "type": "object",
                          "required": [ "sku", "size", "usage" ],
                          "properties": {
                            "sku": {
                              "$id": "#/properties/usageDetail/properties/environments/items/properties/resourceUsage/properties/storage/items/properties/sku",
                              "type": "string"
                            },
                            "size": {
                              "$id": "#/properties/usageDetail/properties/environments/items/properties/resourceUsage/properties/storage/items/properties/size",
                              "type": "integer"
                            },
                            "usage": {
                              "$id": "#/properties/usageDetail/properties/environments/items/properties/resourceUsage/properties/storage/items/properties/usage",
                              "description": "Seconds of usage",
                              "type": "number"
                            }
                          },
                          "additionalProperties": false
                        }
                      }
                    },
                    "additionalProperties": false
                  }
                },
                "additionalProperties": false
              }
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  }
}