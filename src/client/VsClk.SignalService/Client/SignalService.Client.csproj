<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <AssemblyName>Microsoft.VsCloudKernel.SignalService.Client</AssemblyName>
    <RootNamespace>Microsoft.VsCloudKernel.SignalService.Client</RootNamespace>

    <IsPackable>true</IsPackable>
    <Description>VS Cloud Kernel Signal Service Client</Description>
    <!--<GeneratePackageOnBuild>true</GeneratePackageOnBuild>-->
    <PackageTags>Visual Studio Cloud Kernel</PackageTags>
    <Copyright>© Microsoft Corporation. All rights reserved.</Copyright>

    <ServiceRoot>..\..\..\services\containers\VsClk.SignalService</ServiceRoot>
  </PropertyGroup>
  
  <ItemGroup>
    <Compile Include="$(ServiceRoot)\PresenceServiceHub.Contracts\*.cs">
      <Link>Contracts\%(Filename)%(Extension)</Link>
    </Compile>

    <Compile Include="$(ServiceRoot)\Shared\DictionaryHelpers.cs" Link="Shared\DictionaryHelpers.cs" />
    <Compile Include="$(ServiceRoot)\Shared\TraceSourceExtensions.cs" Link="Shared\TraceSourceExtensions.cs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.SignalR.Client" Version="1.1.0" />
    <!--
    Note: add this package if moving to version 3>
    <PackageReference Include="Microsoft.AspNetCore.SignalR.Protocols.NewtonsoftJson" Version="3.0.0-preview5-19227-01" />
    -->

    <PackageReference Include="Microsoft.VisualStudio.Threading" Version="15.6.56" />
  </ItemGroup>

</Project>
