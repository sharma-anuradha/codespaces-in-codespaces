{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "variables": {
    // required for containerRegistryReplications
    "location": "WestUs2"
  },
  "resources": [
    {
      "name": "vscscodespprodacr",
      "type": "Microsoft.ContainerRegistry/registries",
      "apiVersion": "2019-12-01-preview",
      "location": "WestUs2",
      "sku": {
        "name": "Premium",
        "tier": "Premium"
      },
      "properties": {
        "networkRuleSet": {
          "defaultAction": "Allow",
          "virtualNetworkRules": [],
          "ipRules": []
        },
        "policies": {
          "quarantinePolicy": {
            "status": "disabled"
          },
          "trustPolicy": {
            "type": "Notary",
            "status": "disabled"
          },
          "retentionPolicy": {
            "days": 7,
            "status": "disabled"
          }
        },
        "encryption": {
          "status": "disabled"
        },
        "dataEndpointEnabled": false,
        "publicNetworkAccess": "Enabled"
      },

      // Child resources, regional replications, computed in ResourceNames.ts
      "resources": [
  {
    "name": "vscscodespprodacr/eastus",
    "condition": "[not(equals(toLower(variables('location')),'eastus'))]",
    "type": "Microsoft.ContainerRegistry/registries/replications",
    "apiVersion": "2019-12-01-preview",
    "location": "eastus",
    "properties": {
      "regionEndpointEnabled": true
    },
    "dependsOn": [
      "[resourceId('Microsoft.ContainerRegistry/registries','vscscodespprodacr')]"
    ]
  },
  {
    "name": "vscscodespprodacr/southeastasia",
    "condition": "[not(equals(toLower(variables('location')),'southeastasia'))]",
    "type": "Microsoft.ContainerRegistry/registries/replications",
    "apiVersion": "2019-12-01-preview",
    "location": "southeastasia",
    "properties": {
      "regionEndpointEnabled": true
    },
    "dependsOn": [
      "[resourceId('Microsoft.ContainerRegistry/registries','vscscodespprodacr')]"
    ]
  },
  {
    "name": "vscscodespprodacr/westeurope",
    "condition": "[not(equals(toLower(variables('location')),'westeurope'))]",
    "type": "Microsoft.ContainerRegistry/registries/replications",
    "apiVersion": "2019-12-01-preview",
    "location": "westeurope",
    "properties": {
      "regionEndpointEnabled": true
    },
    "dependsOn": [
      "[resourceId('Microsoft.ContainerRegistry/registries','vscscodespprodacr')]"
    ]
  },
  {
    "name": "vscscodespprodacr/westus2",
    "condition": "[not(equals(toLower(variables('location')),'westus2'))]",
    "type": "Microsoft.ContainerRegistry/registries/replications",
    "apiVersion": "2019-12-01-preview",
    "location": "westus2",
    "properties": {
      "regionEndpointEnabled": true
    },
    "dependsOn": [
      "[resourceId('Microsoft.ContainerRegistry/registries','vscscodespprodacr')]"
    ]
  }
]
    }
  ]
}
