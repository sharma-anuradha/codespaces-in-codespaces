{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "env": {
      "type": "string"
    },
    "instance": {
      "type": "string"
    },
    "resourceNamePrefix": {
      "type": "string",
      "defaultValue": "vssvc-"
    },
    "serviceName": {
      "type": "string"
    },
    "stampName": {
      "type": "string"
    }
  },
  "variables": {
    "location": "[resourceGroup().location]",
    "env": "[parameters('env')]",
    "instance": "[parameters('instance')]",
    "resourceNamePrefix": "[parameters('resourceNamePrefix')]",
    "serviceName": "[parameters('serviceName')]",
    "stampName": "[parameters('stampName')]",
    "baseResourceName": "[concat(variables('resourceNamePrefix'),'-',variables('serviceName'),'-',variables('env'),'-',variables('instance'),'-',variables('stampName'))]",
    "serviceBusNamespace": "[concat(variables('baseResourceName'),'-service-bus')]",
    "serviceBusQueueLockDuration": "PT30S",
    "serviceBusQueueMaxSizeInMegabytes": 4096,
    "serviceBusQueueRequiresDuplicateDetection": true,
    "serviceBusQueueRequiresSession": true,
    "serviceBusQueueDefaultMessageTimeToLive": "P14D",
    "serviceBusQueueDuplicateDetectionHistoryTimeWindow": "PT30S",
    "serviceBusQueueMaxDeliveryCount": 3
  },
  "resources": [
    {
      "comments": "***** Stamp Service Bus Namespace *****",
      "type": "Microsoft.ServiceBus/namespaces",
      "apiVersion": "2017-04-01",
      "name": "[variables('serviceBusNamespace')]",
      "location": "[variables('location')]",
      "sku": {
          "name": "Standard"
      },
      "properties": {},
      "resources": [
        {
          "name": "connections-new",
          "type": "queues",
          "apiVersion": "2017-04-01",
          "properties": {
            "lockDuration": "[variables('serviceBusQueueLockDuration')]",
            "maxSizeInMegabytes": "[variables('serviceBusQueueMaxSizeInMegabytes')]",
            "requiresDuplicateDetection": "[variables('serviceBusQueueRequiresDuplicateDetection')]",
            "requiresSession": "[variables('serviceBusQueueRequiresSession')]",
            "defaultMessageTimeToLive": "[variables('serviceBusQueueDefaultMessageTimeToLive')]",
            "duplicateDetectionHistoryTimeWindow": "[variables('serviceBusQueueDuplicateDetectionHistoryTimeWindow')]",
            "maxDeliveryCount": "[variables('serviceBusQueueMaxDeliveryCount')]"
          },
          "dependsOn": [
            "[variables('serviceBusNamespace')]"
          ]
        },
        {
          "name": "connections-established",
          "type": "queues",
          "apiVersion": "2017-04-01",
          "properties": {
            "lockDuration": "[variables('serviceBusQueueLockDuration')]",
            "maxSizeInMegabytes": "[variables('serviceBusQueueMaxSizeInMegabytes')]",
            "requiresDuplicateDetection": "[variables('serviceBusQueueRequiresDuplicateDetection')]",
            "requiresSession": "[variables('serviceBusQueueRequiresSession')]",
            "defaultMessageTimeToLive": "[variables('serviceBusQueueDefaultMessageTimeToLive')]",
            "duplicateDetectionHistoryTimeWindow": "[variables('serviceBusQueueDuplicateDetectionHistoryTimeWindow')]",
            "maxDeliveryCount": "[variables('serviceBusQueueMaxDeliveryCount')]"
          },
          "dependsOn": [
            "[variables('serviceBusNamespace')]"
          ]
        }
      ]
    }
  ]
}
