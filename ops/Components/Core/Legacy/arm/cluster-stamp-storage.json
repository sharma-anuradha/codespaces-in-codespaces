{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "env": {
      "type": "string"
    },
    "instance": {
      "type": "string"
    },
    "stampName": {
      "type": "string"
    },
    "storageAccountPrefix": {
      "type": "string",
      "defaultValue": "vso"
    },
    "storageAccountInfix": {
      "type": "string"
    },
    "storageAccountRegionCode": {
      "type": "string"
    }
  },
  "variables": {
    "location": "[resourceGroup().location]",
    "env": "[parameters('env')]",
    "instance": "[parameters('instance')]",
    "resourceNamePrefix": "[parameters('storageAccountPrefix')]",
    "stampName": "[parameters('stampName')]",
    "storageAccountPrefix": "[parameters('storageAccountPrefix')]",
    "storageAccountInfix": "[parameters('storageAccountInfix')]",
    "storageAccountRegionCode": "[parameters('storageAccountRegionCode')]",
    "locationMap": {
      "asse": "southeastasia",
      "euw": "westeurope",
      "use": "eastus",
      "usw2": "westus2",
      "usec": "eastus2euap"
    },
    "storageAccountLocation": "[variables('locationMap')[variables('storageAccountRegionCode')]]",
    "storageAccountName": "[concat(variables('resourceNamePrefix'),variables('env'),variables('instance'),variables('stampName'),variables('storageAccountInfix'),variables('storageAccountRegionCode'))]",
    "storageAccountAccessTier": "Hot",
    "storageAccountKind": "StorageV2",
    "storageAccountTier": "Standard",
    "storageAccountType": "Standard_LRS"
  },
  "resources": [
    {
      "comments": "***** Stamp Storage Account *****",
      "type": "Microsoft.Storage/storageAccounts",
      "name": "[variables('storageAccountName')]",
      "apiVersion": "2019-04-01",
      "kind": "[variables('storageAccountKind')]",
      "location": "[variables('storageAccountLocation')]",
      "sku": {
        "name": "[variables('storageAccountType')]",
        "tier": "[variables('storageAccountTier')]"
      },
      "properties": {
        "accessTier": "[variables('storageAccountAccessTier')]"
      }
    }
  ]
}