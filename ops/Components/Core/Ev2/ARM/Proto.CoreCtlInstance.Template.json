{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "env": {
      "type": "string"
    },
    "instance": {
      "type": "string"
    },
    "resourceNamePrefix": {
      "type": "string"
    },
    "serviceName": {
      "type": "string"
    },
    "databaseLocations": {
      "type": "string"
    }
  },
  "variables": {
    "location": "[resourceGroup().location]",
    "env": "[parameters('env')]",
    "instance": "[parameters('instance')]",
    "resourceNamePrefix": "[parameters('resourceNamePrefix')]",
    "serviceName": "[parameters('serviceName')]",
    "baseResourceName": "[concat(variables('resourceNamePrefix'),'-',variables('serviceName'),'-',variables('env'),'-',variables('instance'))]",
    "vnetName": "[concat(variables('baseResourceName'),'-vnet')]",
    "vnetId": "[resourceId('Microsoft.Network/virtualNetworks',variables('vnetName'))]",
    "mapsAccountName": "[concat(variables('baseResourceName'),'-maps')]",
    "databaseAccountName": "[concat(variables('baseResourceName'),'-db')]",
    "databaseAccountKind": "GlobalDocumentDB",
    "databaseAccountConsistencyPolicy": {
      "defaultConsistencyLevel": "BoundedStaleness",
      "maxStalenessPrefix": "100000",
      "maxIntervalInSeconds": "300"
    },
    "databaseAccountDefaultExperience": "Core (SQL)",
    "databaseAccountEnableAutomaticFailover": false,
    "databaseAccountEnableMultipleWriteLocations": true,
    "databaseAccountIsVirtualNetworkFilterEnabled": false,
    "databaseAccountOfferType": "Standard",
    "databaseLocationsArray": "[split(parameters('databaseLocations'),',')]"
  },
  "resources": [
    {
      "comments": "***** Instance Virtual Network *****",
      "type": "Microsoft.Network/virtualNetworks",
      "apiVersion": "2018-12-01",
      "name": "[variables('vnetName')]",
      "location": "[variables('location')]",
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "10.0.0.0/16"
          ]
        },
        "subnets": [
          {
            "name": "default",
            "properties": {
              "addressPrefix": "10.0.0.0/24"
            }
          }
        ],
        "virtualNetworkPeerings": [],
        "enableDdosProtection": false,
        "enableVmProtection": false
      }
    },
    {
      "comments": "***** Instance CosmosDB Database Account *****",
      "type": "Microsoft.DocumentDB/databaseAccounts",
      "name": "[variables('databaseAccountName')]",
      "apiVersion": "2019-08-01",
      "location": "[variables('location')]",
      "kind": "[variables('databaseAccountKind')]",
      "properties": {
        "name": "[variables('databaseAccountName')]",
        "enableAutomaticFailover": "[variables('databaseAccountEnableAutomaticFailover')]",
        "enableMultipleWriteLocations": "[variables('databaseAccountEnableMultipleWriteLocations')]",
        "isVirtualNetworkFilterEnabled": "[variables('databaseAccountIsVirtualNetworkFilterEnabled')]",
        "virtualNetworkRules": [],
        "consistencyPolicy": "[variables('databaseAccountConsistencyPolicy')]",
        "copy": [
          {
            "name": "locations",
            "count": "[length(variables('databaseLocationsArray'))]",
            "input": {
              "locationName": "[variables('databaseLocationsArray')[copyIndex('locations')]]",
              "failoverPriority": "[copyIndex('locations')]",
              "isZoneRedundant": false
            }
          }
        ],
        "databaseAccountOfferType": "[variables('databaseAccountOfferType')]"
      },
      "tags": {
        "defaultExperience": "[variables('databaseAccountDefaultExperience')]"
      },
      "dependsOn": [
        "[variables('vnetId')]"
      ]
    },
    {
      "comments": "***** Instance Maps Account *****",
      "type": "Microsoft.Maps/accounts",
      "name": "[variables('mapsAccountName')]",
      "apiVersion": "2018-05-01",
      "location": "global",
      "sku": {
        "name": "S1",
        "tier": "Standard"
      }
    }
  ]
}