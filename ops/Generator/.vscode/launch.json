{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Generator",
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "args": [
                "${workspaceFolder}/index.ts",
                "-i ../Components",
                "-o ../Components.Generated",
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Generator With File Hot Reload",
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "args": [
                "${workspaceFolder}/index.ts",
                "-i ../Components",
                "-o ../Components.Generated",
                "-h"
            ]
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Hot Reload Debug Instance",
            "protocol": "inspector",
            "port": 4321,
            "restart": true,
            "cwd": "${workspaceRoot}"
        },
        {
            "name": "Current TS File",
            "type": "node",
            "request": "launch",
            "args": [
                "${relativeFile}"
            ],
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}